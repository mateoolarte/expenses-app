<% if @expense.errors.empty? %>
  // remove the row from list, add the row to the table, update header values, show alert and hide modal
  $(`#${<%= @expense.id %>}`).remove()
  $('#expenses-table tbody').append('<%= j render "row", expense: @expense %>').show()
  $('.total-per-month').html("<%= number_to_currency(get_total_amount_per_month(@expenses_per_month)) %>")
  $('.total-transactions').html("<%= @expenses_per_month.count %>")
  $('.average-transactions').html("<%= number_to_currency(get_average_per_month(@expenses_per_month)) %>")
  $('.alert-success').html("El gasto ha sido actualizado con Ã©xito").show()
  $('#expense-modal').modal('hide')
<% else %>
  // show first error
  alert('<%= @expense.errors.full_messages[0] %>')
<% end %>